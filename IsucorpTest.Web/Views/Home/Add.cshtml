@model IsucorpTest.Model.ViewModel.ContactViewModel

@{
    ViewBag.Title = "New Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Contact</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
