@using IsucorpTest.Language.Entities
@using IsucorpTest.Language
@model IsucorpTest.ViewModel.ViewModel.ContactViewModel

@{
    ViewBag.Title = @ContactEntity.EditContact;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("ClientErrors")
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal">
        <div class="jumbotron lessPadding noBottomMargin col-lg-12 col-sm-12 col-md-12">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h4 class="text-info">@ContactEntity.EditContact</h4>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 text-right">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                    <div class="glyphicon glyphicon-arrow-left"> </div>
                    @ContactEntity.Back
                </a>          
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        <div class="row noLeftRigthMargin">
            <div class="col-lg-3 col-md-3 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @id = "editContactName", @type = "text", @placeholder = @ContactEntity.ContactName, @tabindex = "1", @maxlength = 30 } })                       
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-tasks"></i></span>
                        <select id="editContactType" class="form-control" name="contactType" tabindex="2">
                            @foreach (var item in Model.ListContactTypes)
                            {
                                <option value="@item.Id">
                                    @item.Name
                                </option>
                            }
                        </select>
                        @Html.HiddenFor(model => model.ContactTypeId)
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @id = "editPhoneNumber", @type = "text", @placeholder = "(99) 9999-9999", @tabindex = "3" } })                       
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-12">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
                        @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control", @id = "editBirthDate", @type = "datetime", placeholder = @ContactEntity.BirthDate, @tabindex = "4" } })                      
                    </div>
                </div>
            </div>
        </div>

        <div class="row noLeftRigthMargin">
            <div class="col-lg-12 col-md-12 col-sm-12 noPadding">
                <div class="form-group">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        @Html.TextAreaFor(model => model.Description, 3, 70, new { @id = "editContactDescription", @tabindex = "5" })                                          
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="form-group pull-right">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <input type="button" value="@Common.Save" class="btn btn-danger" id="btnEditContact"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script>
        var contactTypeId = @Html.Raw(Json.Encode(Model.ContactTypeId));
        var contactId = @Html.Raw(Json.Encode(Model.Id));
        var EditResources = {
            NameError: '@ContactEntity.NameError',
            NameLengthError: '@ContactEntity.NameLengthError',
            BirthDateError: '@ContactEntity.BirthDateError',
            EditContactError: '@ContactEntity.EditContactError'
        };
    </script>     
    <script src="~/Scripts/tinymce/js/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/jquery.mask.js"></script>
    <script src="~/Scripts/created/globalMethods.js"></script>
    <script src="~/Scripts/created/editContact.js"></script>
}

